{
  "name": "compendus",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsx scripts/build-worker.ts && vite build",
    "build:worker": "tsx scripts/build-worker.ts",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "cf-dev": "vite -c ./cf/vite.config.ts",
    "cf-build": "vite -c ./cf/vite.config.ts build",
    "cf-preview": "vite -c ./cf/vite.config.ts preview",
    "cf-release": "wrangler deploy -c dist/rsc/wrangler.json && wrangler deploy",
    "lint": "oxfmt && oxlint",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@lingo-reader/epub-parser": "^0.4.5",
    "@lingo-reader/mobi-parser": "^0.4.5",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "canvas": "^3.2.1",
    "drizzle-orm": "^0.45.1",
    "jszip": "^3.10.1",
    "mime-types": "^3.0.2",
    "music-metadata": "^11.11.2",
    "node-id3": "^0.2.9",
    "node-unrar-js": "^2.0.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "pdf2pic": "^3.2.0",
    "pdfjs-dist": "^5.4.624",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "7.13.0",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.23.1",
    "@react-router/dev": "^7.13.0",
    "@react-router/node": "7.13.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mime-types": "^3.0.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "@typescript/native-preview": "7.0.0-dev.20260207.1",
    "@vitejs/plugin-react": "latest",
    "@vitejs/plugin-rsc": "latest",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.3",
    "knip": "^5.83.1",
    "oxfmt": "0.28.0",
    "oxlint": "1.43.0",
    "puppeteer": "^24.37.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "canvas",
      "core-js",
      "es5-ext",
      "esbuild",
      "puppeteer"
    ],
    "overrides": {
      "pdfjs-dist": "^5.4.530"
    }
  }
}
