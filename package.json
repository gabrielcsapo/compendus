{
  "name": "compendus",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "pnpm run build && pnpm run preview",
    "dev": "node --import tsx server/index.ts & vite",
    "dev:api": "node --import tsx --watch server/index.ts",
    "dev:vite": "vite",
    "build": "tsx scripts/build-worker.ts && vite build && tsx scripts/copy-migrations.ts",
    "build:worker": "tsx scripts/build-worker.ts",
    "preview": "node --import tsx server/index.ts & vite preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "lint": "oxfmt && oxlint",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.15",
    "@hono/node-server": "^1.19.9",
    "@lingo-reader/epub-parser": "^0.4.5",
    "@lingo-reader/mobi-parser": "^0.4.5",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "canvas": "^3.2.1",
    "codemirror": "^6.0.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jszip": "^3.10.1",
    "mime-types": "^3.0.2",
    "music-metadata": "^11.12.0",
    "node-id3": "^0.2.9",
    "node-unrar-js": "^2.0.2",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5",
    "pdf2pic": "^3.2.0",
    "pdfjs-dist": "^5.4.624",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "7.13.0",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.13.0",
    "@react-router/node": "7.13.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/mime-types": "^3.0.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^11.0.0",
    "@typescript/native-preview": "7.0.0-dev.20260215.1",
    "@vitejs/plugin-react": "5.1.4",
    "@vitejs/plugin-rsc": "0.5.19",
    "drizzle-kit": "^0.31.9",
    "esbuild": "^0.27.3",
    "knip": "^5.83.1",
    "oxfmt": "0.32.0",
    "oxlint": "1.47.0",
    "puppeteer": "^24.37.3",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "8.0.0-beta.14",
    "vitest": "^4.0.18",
    "wrangler": "^4.65.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "canvas",
      "core-js",
      "es5-ext",
      "esbuild",
      "puppeteer"
    ],
    "overrides": {
      "pdfjs-dist": "^5.4.530"
    }
